@page "/herodetails/{heroId:int}"

@using BookOfHeroes.Data
@inject HeroService HeroService

<MudText Typo="Typo.h3">@hero.Name.ToUpper() Details</MudText>
<MudForm>
    <MudTextField T="int" Label="Id" ReadOnly="true" @bind-Value="@hero.Id" />
    <MudTextField T="string" Label="Name" @bind-Value="@hero.Name" />
</MudForm>

@code {
    [Parameter]
    public int heroId { get; set; }

    private Hero hero;

    protected override async Task OnInitializedAsync()
    {
        hero = await HeroService.GetHeroAsync(heroId);
    }
}
