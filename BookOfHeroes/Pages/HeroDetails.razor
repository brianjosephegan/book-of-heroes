@page "/herodetails/{heroId:int}"

@using BookOfHeroes.Data
@inject HeroService HeroService

@if (@hero != null)
{
    <h3>@hero.Name.ToUpper() Details</h3>
    <div><span>id: </span>@hero.Id</div>
    <div>
        <label for="name">Hero name: </label>
        <input id="name" placeholder="name" @bind="@hero.Name">
    </div>
}

@code {
    [Parameter]
    public int heroId { get; set; }

    private Hero hero;

    protected override async Task OnInitializedAsync()
    {
        hero = await HeroService.GetHeroAsync(heroId);
    }
}
